/*Variables Stylus*/	
@import "variables.styl"

html, body
	padding 0px
	margin 0px
	height 100%
	width 100%
	overflow hidden
	
.appAlertDialog
	position absolute
	left 50%
	margin-left -100px
	width 200px
	min-height 30px
	background-color #FFF
	top 200px
	font-size 12px
	padding 10px
	
.clickable
	cursor pointer
	
.blocker
	position absolute
	left 0
	right 0
	bottom 0
	top 0
	z-index 10000000
	background-color #CCC
	opacity 0.5
	
.app .dijitButtonNode
	background $buttonsColor
	color $buttonsTextColor
	border none
	height 25px
	
.app .dijitButtonText
	line-height 25px

.app .dijitHover .dijitButtonNode
	background-color $buttonsHoverColor
	
.app .dijitTooltipContainer
	background-color $tooltipColor
	background-image url()
	
.app .dijitTooltipDialog
	outline none

.app .dijitTooltipContainer .dijitTooltipAbove > .dijitTooltipConnector,
.app .dijitTooltipContainer .dijitTooltipBelow > .dijitTooltipConnector
	background-image url() !important
	
.app .dijitTooltipConnector
	display none

.app .dijitDropDownButtonHover .dijitButtonNode,
.app .dijitButtonHover .dijitButtonNode
	background-color $buttonsHoverColor
	background-image url()
	color #FFF
	

