.header-container
	position absolute
	left 0
	top 0
	right 0
	height $headerHeight
	z-index 100
	background-color green
	
.navbar-nav
	float left
	
.navbar-toggle
	float left
	margin-left 15px
	
.menu-item
	padding 10px
	
.menu-item.selected
	text-decoration underline
	
.navbar-inverse
	background-color #444C94
	
.navbar-nav > .active > a > span
	border-bottom 3px solid rgb(17,154,218)
	box-sizing border-box
	border-radius 3px
	padding-bottom 5px
	color #FFF
	
.navbar-inverse .navbar-nav > .active > a,
.navbar-inverse .navbar-nav > .active > a:hover,
.navbar-inverse .navbar-nav > .active > a:focus
	background none
	
.logo
	background-image url('../images/logo.png')
	background-repeat no-repeat
	position absolute
	width 100%
	height 100%
	background-position center 0px
	