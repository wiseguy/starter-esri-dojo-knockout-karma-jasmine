	z-index 100
	
	select
		width 100px
		height 25px
		background-color $buttonsColor
		border 0px solid #222
		color $buttonsTextColor
		
	select:hover
		color $buttonsTextHoverColor
		
theme-widget
	position absolute
	right 10px
	top 20px
	z-index 100
	
	.themeItem
		display inline-block
		width 90px
		background-color #CCC
		height 80px
		overflow hidden
		
	.themeItem:hover
		height 120px
			
	.themeTitle
		color #FFF
		background-color #000
		padding 10px
		
	.mapIndex div
		display inline-block
		cursor pointer
		font-size 10px
				
.dijitPopup.dijitTooltipDialogPopup
	transition opacity 1s ease-out
	
.HomeButton:hover,
.locationButton:hover,
.syncMaps:hover,
.esriSimpleSlider:hover
	opacity 1.0
	
.HomeButton
	position: absolute
	top 95px
	left 20px
	z-index 100
	opacity 0.2
	
	.home
		opacity 0.8	
		background-image url('../images/control_home.png')
		background-color $toolsBackground
		border-radius 0px
		transition all 0.5s ease-out
		
		
	.home:hover
		opacity 1.0
		background-repeat no-repeat
		background-color $toolsBackgroundHover
		background-position 7px 7px
		
	
.locationButton	
	position absolute
	top 135px
	left 20px
	z-index 100
	width 30px
	height 30px
	background-repeat no-repeat
	background-image url('../images/location.png')
	background-position 5px 5px
